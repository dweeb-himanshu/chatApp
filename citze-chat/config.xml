<?xml version='1.0' encoding='utf-8'?>
<widget id="com.citzechat.chat" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CitzeChat</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="phonegap-plugin-push" source="npm" spec="1.6.0">
        <variable name="SENDER_ID" value="49466468971" />
        </plugin>
    <preference name="android-minSdkVersion" value="15" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="SplashScreen" value="none"/>
        <icon src="www/images/chat-icon.png" platform="android" density="ldpi" />
        <icon src="www/images/chat-icon.png" platform="android" density="mdpi" />
        <icon src="www/images/chat-icon.png" platform="android" density="hdpi" />
        <icon src="www/images/chat-icon.png" platform="android" density="xhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
