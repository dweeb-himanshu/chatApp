<?xml version='1.0' encoding='utf-8'?>
<widget id="com.citzechat.chat" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="PushPlugin">
        <param name="android-package" value="com.plugin.gcm.PushPlugin" />
    </feature>
    <feature name="PushNotification">
        <param name="android-package" value="com.adobe.phonegap.push.PushPlugin" />
    </feature>
    <allow-intent href="market:*" />
    <preference name="SplashScreen" value="none" />
    <icon density="ldpi" platform="android" src="www/images/chat-icon.png" />
    <icon density="mdpi" platform="android" src="www/images/chat-icon.png" />
    <icon density="hdpi" platform="android" src="www/images/chat-icon.png" />
    <icon density="xhdpi" platform="android" src="www/images/chat-icon.png" />
    <name>CitzeChat</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <preference name="android-minSdkVersion" value="15" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
